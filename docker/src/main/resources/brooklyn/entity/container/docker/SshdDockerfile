# sshd
#
# VERSION 0.0.5

FROM ${fullyQualifiedImageName}
MAINTAINER Cloudsoft "brooklyn@cloudsoftcorp.com"

# setup locale
RUN type locale-gen ; if [ "$?" -eq "0" ] ; then locale-gen en_US.UTF-8 ; fi

# setup root account, ensures that image root accounts have non-default passwords
RUN echo 'root:${entity.password}' | chpasswd

# install sshd
RUN type apt-get ; \
  if [ "$?" -eq "0" ] ; then \
    apt-get update ; \
    apt-get install -y openssh-server ; \
  else \
    yum -y install openssh-server ; \
  fi ; \
  mkdir /var/run/sshd ; \
  chmod 600 /var/run/sshd ;

# configure sshd to allow login
RUN sed -i.bk 's/PermitRootLogin.*$/PermitRootLogin yes/g' /etc/ssh/sshd_config ; \
  echo 'PasswordAuthentication yes' >> /etc/ssh/sshd_config

# SSH login fix. Otherwise user is kicked off after login
RUN sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

[#if ssh??]
[#if ssh.authorisedKeys??]
RUN if [ -f /etc/ssh/sshd_config ] ; then \
    sed -i "/^#/ d" /etc/ssh/sshd_config ; \
    sed -i "/PasswordAuthentication/ d" /etc/ssh/sshd_config ; \
    sed -i "/GSSAPIAuthentication/ d" /etc/ssh/sshd_config ; \
    sed -i "/X11Forwarding/ d" /etc/ssh/sshd_config ; \
    sed -i "/AuthorizedKeysFile/ d" /etc/ssh/sshd_config ; \
    sed -i "/PubkeyAuthentication/ d" /etc/ssh/sshd_config ; \
    sed -i "/RSAAuthentication/ d" /etc/ssh/sshd_config ; \
    echo PasswordAuthentication no >> /etc/ssh/sshd_config ; \
    echo GSSAPIAuthentication no >> /etc/ssh/sshd_config ; \
    echo X11Forwarding no >> /etc/ssh/sshd_config ; \
    echo AuthorizedKeysFile .ssh/authorized_keys >> /etc/ssh/sshd_config ; \
    echo PubkeyAuthentication yes >> /etc/ssh/sshd_config ; \
    echo RSAAuthentication yes >> /etc/ssh/sshd_config ; \
  elif  -f /etc/sshd_config ] ; then \
    sed -i "/^#/ d" /etc/sshd_config ; \
    sed -i "/PasswordAuthentication/ d" /etc/sshd_config ; \
    sed -i "/GSSAPIAuthentication/ d" /etc/sshd_config ; \
    sed -i "/X11Forwarding/ d" /etc/sshd_config ; \
    sed -i "/AuthorizedKeysFile/ d" /etc/sshd_config ; \
    sed -i "/PubkeyAuthentication/ d" /etc/sshd_config ; \
    sed -i "/RSAAuthentication/ d" /etc/sshd_config ; \
    echo PasswordAuthentication no >> /etc/sshd_config ; \
    echo GSSAPIAuthentication no >> /etc/sshd_config ; \
    echo X11Forwarding no >> /etc/sshd_config ; \
    echo AuthorizedKeysFile .ssh/authorized_keys >> /etc/sshd_config ; \
    echo PubkeyAuthentication yes >> /etc/sshd_config ; \
    echo RSAAuthentication yes >> /etc/sshd_config ; \
  fi ; \
  mkdir /root/.ssh && \
  echo ${ssh.authorisedKeys} >> /root/.ssh/authorized_keys
[/#if]
[/#if]

EXPOSE 22

CMD [ "/usr/sbin/sshd", "-D" ]
